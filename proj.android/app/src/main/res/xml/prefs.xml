<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="root">

    <ListPreference
        android:entries="@array/layout_prefs_name"
        android:entryValues="@array/layout_prefs_value"
        android:key="@string/layout_prefs"
